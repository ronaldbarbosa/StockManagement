@inject IStringLocalizer<AdministrationResource> AdministrationLocalizer
@inject IStringLocalizer<Resource> Localizer

@if (IsVisible)
{
    <div class="modal fade show" style="display: block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(Role.Id == Guid.Empty ? AdministrationLocalizer["AddRole"] : AdministrationLocalizer["EditRole"])</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal" aria-label="Close"></button>
                </div>
                <EditForm Model="@Role" OnSubmit="SaveAsync">
                    <div class="modal-body">
                        <TextInputComponent Id="Nome" Label=@AdministrationLocalizer["Role"] Type="@InputTypes.text"
                                            Value="@Role.Name"
                                            ValueChanged="@(v => Role.Name = v)" ValueExpression="() => Role.Name"/>
                    </div>
                    <div class="modal-footer">
                        <ButtonComponent ButtonType="@ButtonTypes.submit" ButtonClass="btn-secondary w-100 mb-2"
                                         IconClass="fa-save" ButtonText=@Localizer["LoginSignUp"]
                                         IsLoading="@(Loading)"/>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}